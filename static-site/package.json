{
  "name": "static-site",
  "version": "1.0.0",
  "description": "A sample project for static site",
  "homepage": "https://github.com/prasadcm/web-samples",
  "author": "Prasad Chekkera Muddappa",
  "main": "n/a",
  "private": true,
  "keywords": [
    "static-site",
    "spa"
  ],
  "engines": {
    "node": ">= 20.9.0"
  },
  "scripts": {
    "start": "serve -l 3001 ./",
    "test": "npm run lint",
    "lint": "run-s lint:*",
    "lint:markdown": "markdownlint --config ./.markdownlint.json '**/*.{md,mdx}'",
    "lint:html": "htmlhint --config ./.htmlhintrc '**/*.html'",
    "lint:css": "stylelint 'css/**/*.css'",
    "format": "prettier --write '**/*.{js,json,html,css,scss,md,mdx}'"
  },
  "lint-staged": {
    "*.{html}": [
      "npm run lint-html"
    ],
    "*.{md,mdx}": [
      "npm run lint-markdown"
    ],
    "*.{js,mjs,jsx,css,scss,md,mdx,json,html}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "ISC",
  "devDependencies": {
    "htmlhint": "^1.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "markdownlint": "^0.37.4",
    "npm-run-all": "^4.1.5",
    "prettier": "3.5.3",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0"
  }
}
